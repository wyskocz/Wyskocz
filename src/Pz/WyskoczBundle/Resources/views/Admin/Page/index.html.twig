{% extends '::admin.html.twig' %}
{% block title %}
Lista stron
{% endblock %}
{% block body -%}
    <h3>Lista stron</h3>
    
    <a href="{{ path('admin_page_new') }}">
        <button type="button" class="btn btn-primary btn-sm">Dodaj nową</button>
    </a>
    
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Tag</th>
                <th>Tytuł</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tag }}</a></td>
                <td>{{ entity.title }}</a></td>
                <td>
                    <a href="{{ path('admin_page_show', { 'id': entity.id }) }}"
                        <button type="button" class="btn btn-primary btn-xs">Pokaż</button>
                    </a>
                    <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}">
                        <button type="button" class="btn btn-info btn-xs">Edytuj</button>
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_page_new') }}">
        <button type="button" class="btn btn-primary btn-sm">Dodaj nową</button>
    </a>
    {% endblock %}
